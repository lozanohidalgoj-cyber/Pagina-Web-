// Selecciona todos los elementos con la clase .dropdown
const dropdowns = document.querySelectorAll('.dropdown');

dropdowns.forEach(dropdown => {
  dropdown.addEventListener('click', function(e) {
    e.stopPropagation();
    const submenu = dropdown.querySelector('.submenu');

    // Cierra otros submenus abiertos
    dropdowns.forEach(d => {
      if(d !== dropdown) {
        const sm = d.querySelector('.submenu');
        if(sm) sm.style.display = 'none';
      }
    });

    // Alterna mostrar/ocultar el submenu
    submenu.style.display = (submenu.style.display === 'block') ? 'none' : 'block';
  });
});

// Cierra todos los submenus al hacer clic fuera
document.addEventListener('click', () => {
  dropdowns.forEach(d => {
    const submenu = d.querySelector('.submenu');
    if(submenu) submenu.style.display = 'none';
  });
});
